<% if @todo.errors %>
	<% @todo.errors.messages.each do |key , value| %>

	<h3><%= key %>  <%= value %></h3>



	<% end %>

<% end %>




<%= form_for @todo do |f| %>


<%= f.label :title %>
<%= f.text_field :title %>
<br>

<%= f.label :content %>
<%= f.text_field :content %>
<br>

<%= f.label :importance %>
<%= f.check_box :importance %><br>



<%= f.label :deadline %>
<%= f.datetime_select :deadline %>
<br> 


<%= f.submit %>


<% end %>